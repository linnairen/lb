.login {
    width: 532rpx;
    margin: 0 auto;
    padding: 112rpx 0;
}

.login-text {
    width: 100%;
    height: 112rpx;
}

.text-h1 {
    padding-bottom: 44rpx;
}

.login-form {
    width: 100%;
    height: 355rpx;
}

.form {
    width: 100%;
}

.import {
    display: flex;
    width: 100%;
    margin-top: 92rpx;
    line-height: 56rpx;
    font-size: 38rpx;
    font-weight: bold;
}

.import-code {
    height: 56rpx;
    padding: 0 10rpx;
    color: #fff;
    background: #13dcb1;
    border-radius: 4rpx;
}

.import-tel {
    width: 341rpx;
    height: 56rpx;
    padding-left: 20rpx;
}

.boder {
    width: 100%;
    height: 1rpx;
    background: #dedede;
    margin: 20rpx auto;
}

.terms {
    display: flex;
    width: 100%;
    height: 24rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #a9a9a9;
}

.terms-group {
    display: flex;
    width: 84rpx;
    height: 24rpx;
}

.terms-text {
    margin-left: 9rpx;
    line-height: 24rpx;
}

.terms-url {
    color: #ff7000;
}

.button {
    width: 100%;
    height: 90rpx;
    margin-top: 140rpx;
}

.button-but {
    width: 420rpx;
    height: 90rpx;
    margin: 0 auto;
    font-size: 36rpx;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    background: #5d657c;
    border-radius: 100rpx;
}