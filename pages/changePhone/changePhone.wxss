/* pages/changePhone/changePhone.wxss */
.change_phone{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 40rpx;
}
.msg{
  width: 670rpx;
  margin: 0 auto 58rpx;
  line-height: 42rpx;
  font-size: 28rpx;
  color: #444;
}
.code{
  width: 670rpx;
  height: 92rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
  justify-content: space-between;
}
.code input{
  width: 479rpx;
  border-right: 1rpx solid #efefef;
  height: 40rpx;
  font-size: 32rpx;
}
.hold{
  color: #c8c8c8;
}
.get{
  color: #FF9938;
  font-size: 32rpx;
  width: 5em;
  text-align: center;
}
.nocode{
  width: 670rpx;
  margin: 0 auto;
  text-align: right;
  line-height: 86rpx;
  color: #5D657C;
  font-size: 26rpx;
}
.next{
  width: 590rpx;
  height: 90rpx;
  border-radius: 90rpx;
  margin-top: 100rpx;
  background: #5D657C;
  color: #fff;
  font-family: 'PingFangSC-Medium';
}
.next[disabled]{
  background: #c8c8c8;
}
.shadow{
  position: fixed;
  background: rgba(0, 0, 0, 0.39);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}
.nocode_view{
  width: 510rpx;
  height: 522rpx;
  box-sizing: border-box;
  padding: 50rpx 60rpx 0;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
}
.nocode_view text{
  display: block;
  width: 100%;
  font-size: 26rpx;
  color: #797979;
  line-height: 34rpx;
  margin-bottom: 16rpx;
}
.text text:first-child{
  line-height: 26rpx;
  color: #666;
}
.nocode_view .title{
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #444;
  font-weight: bold;
}
.close{
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  top: -23rpx;
  right: -14rpx;
}