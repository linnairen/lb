.warp {
    width: 100%;
    height: 600rpx;
    align-items: center;
    background: #ffffff;
}

.header {
    width: 100%;
    align-items: center;
    margin-bottom: 60rpx;
}

.header-top {
    font-size: 30rpx;
    line-height: 40rpx;
}

.header-bom {
    font-size: 26rpx;
    line-height: 40rpx;
    color: #999999;
}

.input {
    width: 690rpx;
    height: 90rpx;
    position: relative;
    border: 1rpx solid #ff9938;
    border-radius: 6rpx;
    margin-bottom: 40rpx;
}

.short {
    width: 120rpx;
    height: 38rpx;
    border-right: 1rpx solid #EFEFEF;
}

.short-text {
    margin: 0 15rpx;
    width: 64rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: right;
}

.serial {
    width: 570rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    padding: 0 42rpx;
}

.serial-default {
    padding-left: 10rpx;
    font-size: 32rpx;
    color: #c8c8c8;
}

.serial-text {
    width: 54rpx;
    text-align: center;
    font-size: 32rpx;
    line-height: 90rpx;
}

.mark {
    width: 34rpx;
    height: 4rpx;
    position: absolute;
    bottom: 21rpx;
    border-radius: 2rpx;
    background: #5d657c;
    animation: color linear infinite 1s;
}

@keyframes color {
    0% {
        opacity: 1;
    }
    45% {
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
    95% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.radio {
    margin-left: 496rpx;
    height: 26rpx;
    margin-bottom: 75rpx;
}

.radio-but {
    width: 26rpx;
    height: 26rpx;
    position: relative;
    border-radius: 6rpx;
    border: 2rpx solid #EFEFEF;
}

.radio-text {
    padding-left: 9rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color: #999999;
}

.keyboard {
    width: 100%;
    height: 390rpx;
    padding: 21rpx 0;
    position: fixed;
    background: rgb(209, 215, 219);
    line-height: 0;
    overflow: hidden;
    transition: all ease-out .2s;
}

.keyboard-item {
    width: 10%;
    height: 25%;
    position: relative;
    display: inline-block;
    overflow: hidden;
}

.keyboard-item-text {
    width: 63rpx;
    height: 78rpx;
    line-height: 78rpx;
    border-radius: 12rpx;
    color: #000;
    font-size: 38rpx;
    text-align: center;
    padding: 0;
    overflow: hidden;
    background: #ffffff;
    border-bottom: 2rpx solid #888888;
}

.keyboard-item-text:active,
.keyboard-del-btn:active {
    color: #ffffff !important;
    background: rgb(195, 198, 202) !important;
}

.keyboard-del {
    width: 20%;
    height: 25%;
    position: relative;
    display: inline-block;
    overflow: hidden;
}

.keyboard-del-btn {
    width: 140rpx;
    height: 78rpx;
    line-height: 78rpx;
    border-radius: 12rpx;
    text-align: center;
    padding: 0;
    overflow: hidden;
    background: #ffffff;
    border-bottom: 2rpx solid #888888;
}