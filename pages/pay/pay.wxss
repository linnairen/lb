/* pages/pay/pay.wxss */
.payDetail{
  padding: 38rpx 30rpx 40rpx;
}
.parkInfo {
  display: flex;
  margin-bottom: 30rpx;
}
.parkInfo .ic{
  margin-right: 16rpx;
}
.parkInfo .ic image{
  width: 30rpx;
  height: 36rpx;
}
.parkInfo .if{
  flex: 1;
}
.parkInfo .if .name{
  display: flex;
  height: 36rpx;
  margin-bottom: 10rpx;
  align-items: center;
  font-size: 32rpx;
  color: #444;
}
.parkInfo .if .name .co{
  width: 62rpx;
  height: 30rpx;
  position: relative;
  margin-left: 10rpx;
}
.parkInfo .if .name .co image{
  width: 62rpx;
  height: 30rpx;
}
.parkInfo .if .name .co text{
  position: absolute;
  padding: 4rpx 10rpx;
  font-size: 22rpx;
  color: #fff;
  left: 0;
  top: 0;
}
.addr{
  color: #a9a9a9;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.info_tag{
  display: flex;
  flex-wrap: wrap;
}
.info_tag_item{
  width: 50%;
  height: 46rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.info_tag_item .point{
  border-radius: 50%;
  width: 10rpx;
  background: #ff9938;
  height: 10rpx;
  margin-right: 10rpx;
}

.inform-item-h-plate {
    width: 180rpx;
    height: 48rpx;
    position: relative;
    line-height: 48rpx;
    font-size: 28rpx;
    color: #FF9938;
    text-align: center;
    border-radius: 6rpx;
    border: 1rpx solid #FF9938;
}

.input_box{
  display: flex;
  width: 690rpx;
  height: 90rpx;
  border: 1rpx solid #ff9938;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #444;
  padding: 0 20rpx;
  border-radius: 4rpx;
}
.input_box input{
  flex: 1;
  font-size: 30rpx;
  text-align: right;
}

.title_text{
  padding: 30rpx 0 22rpx 40rpx;
  display: block;
  font-size: 28rpx;
  color: #888;
}

.charge{
  padding: 0 40rpx;
}
.charge_row{
  border-bottom: 1rpx solid #efefef;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.charge_row .with_img {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 28rpx;
}
.charge_row .with_img image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 14rpx;
}
.charge_row .red{
  color: #f23939;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.charge_row .red image{
  width: 12rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.charge_row .bold{
  color: #000;
  font-size: 36rpx;
  font-weight: bold;
}
.pay_way{
  padding: 0 40rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #444;
  margin-bottom: 93rpx;
}
.pay_way .icon{
  display: flex;
  align-items: center;
}
.pay_way .icon image{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.pay_way .checked{
  width: 48rpx;
  height: 48rpx;
}
.btn{
  width: 710rpx;
  height: 90rpx;
  background: #5D657C;
  color: #fff;
  margin-bottom: 20rpx;
}


.shadow {
    background: rgba(0, 0, 0, 0.4);
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 200;
}
.select {
    position: fixed;
    width: 100%;
    height: 468rpx;
    transition: all ease-out .2s;
    background: #ffffff;
    z-index: 999;
    left: 0;
    bottom: -468rpx;
}
.show-plate{
    bottom: 0;
}

.height {
    height: 568rpx !important;
}
.inform {
    height: 255rpx;
}
.plate-wrap {
    width: 100%;
}
.plate {
    width: 25%;
    height: 70rpx;
    display: inline-block;
}

.plate-con {
    margin: 10rpx auto;
    width: 160rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 28rpx;
    color: #888888;
    text-align: center;
    border-radius: 6rpx;
    border: 1rpx solid #efefef;
}

.wrap {
    display: flex;
    flex-wrap: wrap;
}
.select-title {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 99rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #444444;
    border-bottom: 1rpx solid #dedede;
}

.select-title-btn {
    padding: 0 40rpx;
}

.select-main {
    height: 368rpx;
}

.select-height {
    height: 368rpx !important;
}

.select-picker {
    width: 100%;
    height: 100%;
    font-size: 36rpx;
    line-height: 90rpx;
}

.select-indicator {
    height: 90rpx
}

.emergency-active {
    color: #ff9938 !important;
    border: 1rpx solid #ff9938 !important;
}