/* pages/msgList/msgList.wxss */

.main_msg {
    background: none;
    color: #444;
}

.msg_top {
    background: #fff;
    padding: 0 3rpx;
    display: flex;
    justify-content: space-around;
}

.top_item {
    width: 88rpx;
    height: 194rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
}

.img {
    margin-bottom: 18rpx;
    width: 88rpx;
    height: 88rpx;
    position: relative;
}

.img image {
    width: 88rpx;
    height: 88rpx;
}

.noread {
    position: absolute;
    width: 26rpx;
    height: 26rpx;
    top: 0;
    right: 0;
    text-align: center;
    border-radius: 50%;
    line-height: 26rpx;
    color: #fff;
    background: #f23939;
    font-size: 20rpx;
}

.bor {
    position: absolute;
    width: 60rpx;
    height: 6rpx;
    bottom: 0;
    left: 50%;
    margin-left: -30rpx;
    background: #5d657c;
}

.msg_list {
    padding: 30rpx 20rpx;
}

.item {
    width: 100%;
    height: 247rpx;
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    position: relative;
}

.title {
    font-size: 30rpx;
    line-height: 1;
    margin-bottom: 26rpx;
    font-weight: bold;
}

.time {
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    font-size: 26rpx;
    color: #a9a9a9;
    text-align: right;
    white-space: nowrap;
}

.detail {
    display: flex;
}

.detail_img {
    width: 130rpx;
    height: 130rpx;
    margin-left: 20rpx;
}

.detail_msg {
    display: flex;
    flex-direction: column;
}

.detail_msg text {
    margin-bottom: 33rpx;
    height: 72rpx;
    line-height: 36rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #888;
    font-size: 28rpx;
}

.to_look {
    display: flex;
    color: #ff9938;
    font-size: 26rpx;
    align-items: center;
}

.to_look image {
    height: 20rpx;
    width: 10rpx;
    margin-left: 10rpx;
}

.no_img .detail_img {
    display: none;
}

.no_img .to_look {
    justify-content: center;
}