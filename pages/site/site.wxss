.header {
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 999;
    background: #FFFFFF;
    border-bottom: 1rpx solid #EFEFEF;
}

.below {
    position: absolute;
    top: 0;
    width: 100%;
    height: 8rpx;
    transform: rotate(180deg);
}

.header-main {
    height: 90rpx;
    padding: 0 20rpx;
    display: flex;
    font-size: 30rpx;
}

.header-nav {
    height: 40rpx;
    padding: 0 25rpx;
}

.header-nav-text {
    max-width: 180rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.header-inp {
    flex-grow: 1;
    min-height: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    padding: 0 20rpx;
}

.window {
    width: 100%;
    height: 100%;
}

.window-map {
    position: relative;
    width: 100%;
    flex-grow: 1;
}

.map {
    position: absolute;
    width: 100%;
    height: 100%;
}

.map-location {
    position: absolute;
    left: 15rpx;
    bottom: 15rpx;
    width: 102rpx;
    height: 102rpx;
}

.map-mark {
    width: 41.5rpx;
    height: 66rpx;
    transform: translate(0, -50%);
}

.map-text {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #758099;
    border-radius: 30rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    opacity: 0.9;
    transform: translate(0, -180%);
}

.add {
    animation: add .4s;
}

.del {
    width: 0;
    opacity: 0;
    animation: del .2s;
}

@keyframes add {
    from {
        height: 0;
        opacity: 0;
    }
    to {
        height: 60rpx;
        opacity: 0.9;
    }
}

@keyframes del {
    from {
        width: 200rpx;
        opacity: 0.9;
    }
    to {
        width: 0;
        opacity: 0;
    }
}

.fixed {
    width: 688rpx;
    height: 108rpx;
    padding: 0 34rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    opacity: 0.9;
    background: #5D657C;
}

.fixed-cont {
    flex-grow: 1;
    padding-left: 30rpx;
    overflow: hidden;
}

.fixed-cont-top {
    font-size: 28rpx;
    color: #FFFFFF;
    line-height: 46rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.fixed-cont-bom {
    font-size: 24rpx;
    color: #D4D8E6;
    line-height: 30rpx;
}

.fixed-btn {
    display: flex;
    align-items: center;
    padding: 14rpx 26rpx;
    font-size: 32rpx;
    color: #ffffff;
    background: #FF9938;
    flex-shrink: 0;
    border-radius: 6rpx;
}

.fixed-btn-text {
    color: #FF9938;
    background: none;
}

.seek {
    width: 730rpx;
    flex-grow: 1;
    margin: 0 auto 10rpx auto;
}

.seek-item {
    padding: 0 40rpx;
    background: #ffffff;
}

.seek-item-main {
    position: relative;
    height: 130rpx;
    z-index: 2;
    border-bottom: 1rpx solid #EFEFEF;
}

.seek-item:last-child .seek-item-main {
    border-bottom: none;
}

.inner {
    position: absolute;
    top: 0;
    z-index: -9;
    transition: all 0.2s ease-in-out;
}

.dell {
    font-size: 32rpx;
    height: 130rpx;
    line-height: 130rpx;
    background: #e64340;
    text-align: center;
    z-index: 999 !important;
    right: -40rpx;
    color: #fff;
}

.seek-item:last-child {
    border-bottom: none;
}

.seek-item-text {
    width: 600rpx;
    height: 130rpx;
    margin-left: 23rpx;
    overflow: hidden;
}

.seek-item-text-top {
    line-height: 46rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.seek-item-text-bom {
    line-height: 44rpx;
    font-size: 26rpx;
    color: #999999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.city {
    width: 710rpx;
    flex-grow: 1;
    margin: 110rpx auto 20rpx auto;
}

.city-name {
    height: 102rpx;
    line-height: 102rpx;
    padding: 0 30rpx;
    font-size: 30rpx;
    background: #ffffff;
}

.city-star {
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    font-size: 30rpx;
    color: #a9a9a9;
    background: #f6f6f6;
}

.city-list {
    font-size: 0;
    padding-bottom: -1rpx;
    background: #ffffff;
}

.city-list-item {
    width: 33.3333333%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
    font-size: 30rpx;
    border-bottom: 1rpx solid #EFEFEF;
}

.buttom {
    width: 710rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #ffffff;
    text-align: center;
    background: #5d657c;
    border-radius: 6rpx;
}

.classm {
    position: fixed;
    top: 90rpx;
    left: 0;
    right: 0;
    width: 100%;
    height: 12rpx;
    background: #f1f1f1;
    z-index: 99;
}

.classh {
    position: fixed;
    top: 100rpx;
    left: 0;
    right: 0;
    width: 100%;
    height: 90rpx;
    background: #ffffff;
    z-index: 99;
    border-bottom: 1rpx solid #EFEFEF;
}

.classh-tab {
    width: 25%;
}

.classh-text {
    text-align: center;
    width: 80rpx;
    height: 88rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #888888;
}

.tab-active {
    color: #FF9938 !important;
    border-bottom: 2rpx solid #FF9938 !important;
}

.dataMsg {
    margin-top: 100rpx;
    text-align: center;
    font-size: 28rpx;
    color: #888888;
}