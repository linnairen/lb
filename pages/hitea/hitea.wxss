/* pages/hitea/hitea.wxss */

.body {
    position: relative;
    width: 100%;
    height: 100%;
}

.head {
    margin: 105rpx auto 0 auto;
    width: 732rpx;
    height: 381rpx;
}

.headText {
    height: 70rpx;
    font-size: 30rpx;
    color: #444444;
    text-align: center;
    line-height: 70rpx;
}

.headNav {
    font-size: 30rpx;
    color: #888888;
    line-height: 30rpx;
}

.fi {
    width: 100%;
    position: absolute;
    bottom: 90rpx;
}

.share {
    width: 100%;
}

.shareImg {
    width: 110rpx;
    height: 110rpx;
    margin-bottom: 10rpx;
}

.shareItem {
    width: 33%;
    align-items: center;
}

.shareText {
    font-size: 26rpx;
    color: #666666;
    line-height: 34rpx;
}

.record {
    margin-top: 78rpx;
    width: 100%;
    color: #444444;
}

.recordItem {
    width: 50%;
    align-items: center;
}

.recordText {
    font-size: 30rpx;
}

.recordBr {
    font-size: 26rpx;
}

.recordHi {
    font-size: 64rpx;
    color: #FF9938;
    line-height: 64rpx;
}

button {
    height: auto;
    background: #ffffff;
}

button:active {
    background: #ffffff;
}

.shadeMain {
    background: #ffffff;
    border-radius: 9rpx;
    padding: 0 33rpx 80rpx 33rpx;
}

.shadeImg {
    display: block;
    width: 300rpx;
    height: 93rpx;
    margin: 0 auto 52rpx auto;
    transform: translate(0, -8rpx);
}

.shadeCon {
    display: flex;
    width: 566rpx;
    font-size: 28rpx;
    color: #666666;
    line-height: 42rpx;
    padding: 15rpx 0;
}

.shadeTit {
    width: 32rpx;
}