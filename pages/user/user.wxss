/* pages/mine/user/user.wxss */

page>view {
    background: none;
}

.user_info {
    width: 100%;
}

.mine_top {
    width: 100%;
    height: 260rpx;
    background: #5d657c;
    padding: 14rpx 0 0 0;
    box-sizing: border-box;
}

.head_box {
    width: 100%;
    margin: 0 auto;
    text-align: center;
}

.head_img {
    width: 132rpx;
    height: 132rpx;
    margin-bottom: 20rpx;
    border-radius: 50%;
}

.head_text {
    width: 100%;
    font-size: 36rpx;
    color: #fff;
}

.head_text image {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    margin-left: 10rpx;
}

.edit_info {
    width: 100%;
    font-size: 28rpx;
    color: #519CFB;
}

.prove_list {
    margin-top: 20rpx;
    background: #fff;
    width: 100%;
}

.prove {
    height: 100rpx;
    width: 670rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #efefef;
    line-height: 100rpx;
    color: #444;
    font-size: 32rpx;
    position: relative;
}

.prove:first-child>image {
    width: 49rpx;
    height: 35rpx;
    margin-right: 21rpx;
    vertical-align: middle;
}

.prove:last-child>image {
    width: 43rpx;
    height: 42rpx;
    margin-right: 21rpx;
    vertical-align: middle;
}

.prove text {
    display: inline-block;
    vertical-align: middle;
}

.ifon {
    color: #5d657c;
    position: absolute;
    right: 0;
    top: 0;
    line-height: 100rpx;
    height: 100rpx;
}

.ifon image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
    vertical-align: middle;
}

.ifon .no,
.ifon .on,
.ifon .over {
    line-height: 100rpx;
    height: 100rpx;
}

.ifon .over {
    color: #13dcb1;
}