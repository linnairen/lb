/* components/shadePanel/shadePanel.wxss */

.shade {
    transition: all 0.3s;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999999999;
}

.shadeBox {
    position: relative;
    background: rgba(0, 0, 0, 0);
}

.shadeBtn {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translate(-50%, 100%);
}